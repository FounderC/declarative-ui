<Window x:Class="Lab2._4._4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Lab2._4"
        Title="TextEditor" Height="383" Width="600">

    <Window.Resources>
        <!-- Ресурс градієнтної заливки (жовто-блакитно-жовтий) -->
        <LinearGradientBrush x:Key="LinearPanelBrush"
                             StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="Yellow" Offset="0" />
            <GradientStop Color="LightBlue" Offset="0.5" />
            <GradientStop Color="Yellow" Offset="1" />
        </LinearGradientBrush>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Панель інструментів -->
        <Border Grid.Row="0"
                BorderBrush="#FFCBBEBE"
                BorderThickness="2"
                CornerRadius="10"
                Margin="5,5,5,0"
                Background="{StaticResource LinearPanelBrush}">
            <StackPanel Orientation="Horizontal" Margin="5">
                <!-- Кнопка "Відкрити" із вбудованою командою Open -->
                <Button ToolTip="Відкрити" Command="Open">
                    <Image Source="images/open.png" Width="32" Height="32"/>
                </Button>
                <!-- Кнопка "Очистити" із власною командою Clear -->
                <Button ToolTip="Очистити" Command="{x:Static local:CustomCommands.Clear}">
                    <Image Source="images/clear.png" Width="32" Height="32"/>
                </Button>
                <!-- Кнопка "Копіювати" із вбудованою командою Copy -->
                <Button ToolTip="Копіювати" Command="Copy" CommandTarget="{Binding ElementName=txtDocument}">
                    <Image Source="images/copy.png" Width="32" Height="32"/>
                </Button>
                <!-- Кнопка "Вставити" із вбудованою командою Paste -->
                <Button ToolTip="Вставити" Command="Paste" CommandTarget="{Binding ElementName=txtDocument}">
                    <Image Source="images/paste.png" Width="32" Height="32"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- Область тексту та нижня панель -->
        <Border Grid.Row="1"
                BorderBrush="#FFCBBEBE"
                BorderThickness="2"
                CornerRadius="10"
                Margin="5,10,5,5"
                Background="{StaticResource LinearPanelBrush}">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Текстове поле для редагування -->
                <TextBox x:Name="txtDocument" Grid.Row="0"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         FontSize="{Binding ElementName=fontSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                         Margin="5" TextChanged="TextBox_TextChanged_1">
                    TEXT
                </TextBox>

                <!-- Панель з регулюванням розміру шрифту та кнопкою "Зберегти" -->
                <DockPanel Grid.Row="1" LastChildFill="False">
                    <Label Content="Розмір шрифту:" DockPanel.Dock="Left" Margin="5"/>
                    <Slider x:Name="fontSlider"
                            DockPanel.Dock="Left"
                            Margin="4"
                            MinWidth="100"
                            Minimum="12"
                            Maximum="100"
                            Value="24"/>
                    <!-- Кнопка "Зберегти" із командою Save -->
                    <Button Content="OK"
                            Command="Save"
                            DockPanel.Dock="Right"
                            Margin="5"
                            Style="{x:Null}"/>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
