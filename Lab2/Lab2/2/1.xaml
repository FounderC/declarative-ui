<Window x:Class="Lab2._2._1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextEditor"
        Height="400" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Рамка з кутами, закругленими на 10 одиниць -->
        <Border Grid.Row="0"
                BorderBrush="#FFCBBEBE"
                BorderThickness="2"
                CornerRadius="10"
                Margin="5">
            <!-- Контейнер StackPanel з кнопками (горизонтальне розміщення) -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <!-- Кнопка “Відкрити” -->
                <Button ToolTip="Відкрити файл" Margin="5">
                    <Image Source="images/open.png" 
                           Width="32" Height="32" 
                           Stretch="Uniform"/>
                </Button>

                <!-- Кнопка “Стерти” -->
                <Button ToolTip="Очистити текст" Margin="5">
                    <Image Source="images/clear.png"
                           Width="32" Height="32"
                           Stretch="Uniform"/>
                </Button>

                <!-- Кнопка “Копіювати” -->
                <Button ToolTip="Копіювати" Margin="5">
                    <Image Source="images/copy.png"
                           Width="32" Height="32"
                           Stretch="Uniform"/>
                </Button>

                <!-- Кнопка “Вставити” -->
                <Button ToolTip="Вставити" Margin="5">
                    <Image Source="images/paste.png"
                           Width="32" Height="32"
                           Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- Другий рядок для текстової області -->
        <Grid Grid.Row="1" Margin="10">
            <!-- Наприклад, TextBox, що займає весь доступний простір -->
            <TextBox AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"/>
        </Grid>
    </Grid>
</Window>

