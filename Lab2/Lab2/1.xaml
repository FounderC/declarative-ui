<Window x:Class="Lab2._1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="500">

    <Canvas Background="Cyan" RenderTransformOrigin="0.5,0.5">
        <Canvas.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform AngleX="0.2"/>
                <RotateTransform/>
                <TranslateTransform X="0.497"/>
            </TransformGroup>
        </Canvas.RenderTransform>
        <Label Content="Label" 
               Canvas.Left="20" 
               Canvas.Top="20" />

        <TextBox Text="text"
                 Canvas.Left="60" 
                 Canvas.Top="40"
                 Width="36" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Button Content="button"
                Canvas.Left="84" 
                Canvas.Top="60"
                Width="48" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Canvas>
</Window>
